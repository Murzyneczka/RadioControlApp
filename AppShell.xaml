<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RadioControlApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RadioControlApp.Views"
    Title="RadioControlApp">

    <TabBar>
        <!-- Dashboard Tab -->
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:DashboardPage}"
            Route="DashboardPage"
            Icon="home.png" />

        <!-- IR Configuration Tab -->
        <ShellContent
            Title="Konfiguracja IR"
            ContentTemplate="{DataTemplate local:IRConfigurationPage}"
            Route="IRConfigurationPage"
            Icon="ir.png" />

        <!-- FM Configuration Tab -->
        <ShellContent
            Title="Konfiguracja FM"
            ContentTemplate="{DataTemplate local:FMConfigurationPage}"
            Route="FMConfigurationPage"
            Icon="radio.png" />
    </TabBar>

</Shell>